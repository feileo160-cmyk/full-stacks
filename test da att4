<body>
    <h1>Jogo da Adivinha√ß√£o</h1>
    <p>Digite um n√∫mero entre 1 e 10:</p>

    <!-- Campo de entrada -->
    <input type="number" id="palpite" min="1" max="10">
    <button onclick="verificarPalpite()">Tentar</button>

    <!-- Mensagens e feedback -->
    <p id="mensagem"></p>
    <p><strong>Tentativas erradas:</strong> <span id="tentativas"></span></p>

    <script>
        const numeroSecreto = Math.floor(Math.random() * 10) + 1;
        const tentativasErradas = [];

        function verificarPalpite() {
            const input = document.getElementById("palpite");
            const palpite = parseInt(input.value);
            const mensagem = document.getElementById("mensagem");
            const listaTentativas = document.getElementById("tentativas");

            if (isNaN(palpite) || palpite < 1 || palpite > 10) {
                mensagem.textContent = "‚ö†Ô∏è Digite um n√∫mero v√°lido entre 1 e 10.";
                return;
            }

            if (palpite === numeroSecreto) {
                mensagem.textContent = "üéâ Parab√©ns! Voc√™ acertou o n√∫mero!";
                input.disabled = true;
                document.querySelector("button").disabled = true;
            } else {
                if (!tentativasErradas.includes(palpite)) {
                    tentativasErradas.push(palpite);
                }

                let dica = palpite < numeroSecreto ? "O n√∫mero √© maior." : "O n√∫mero √© menor.";
                mensagem.textContent = `‚ùå Errado! ${dica} Tente novamente.`;
                listaTentativas.textContent = tentativasErradas.join(", ");
            }

            input.value = "";
            input.focus();
        }
    </script>
